@model CustomerLedger.Models.TranWithCustomerAndNote

@{
    ViewData["Title"] = $"Delete Customer Transaction - {Model.Customer.Name}";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container">
    <div class="col-12 p-1">
        <a class="btn btn-info" href="@Url.Action("Index", "Transaction")">Back to Transactions</a>
    </div>

    <div class="row mt-4">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Delete Transaction for Customer: @Model.Customer.Name</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Transaction.Id" />

                        <div class="form-group">
                            <p>Are you sure you want to delete this transaction?</p>
                            <dl class="row">
                                <dt class="col-sm-3">Amount:</dt>
                                <dd class="col-sm-9">@Model.Transaction.Amount</dd>

                                <dt class="col-sm-3">Is Paid:</dt>
                                <dd class="col-sm-9">@Model.Transaction.IsPaid</dd>

                                <dt class="col-sm-3">Date:</dt>
                                <dd class="col-sm-9">@Model.Transaction.Date.ToShortDateString()</dd>

                                <dt class="col-sm-3">Note:</dt>
                                <dd class="col-sm-9">@Model.Transaction.NoteText</dd>

                                <dt class="col-sm-3">Type:</dt>
                                <dd class="col-sm-9">@Model.Transaction.Type</dd>
                            </dl>
                        </div>

                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a class="btn btn-secondary" href="@Url.Action("Index", "Transaction")">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
